@page
@model AttendanceSystem.Pages.Admin_view.Dashboard.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">@ViewData["Title"]</h1>
    <p class="text-sm text-gray-500">Overview for today</p>
</div>

<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">

    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-all duration-200">
        <div class="flex items-center gap-5">
            <div class="flex h-14 w-14 items-center justify-center rounded-full bg-blue-50 text-blue-600 ring-4 ring-blue-50/50">
                <i class="bi bi-check-circle-fill text-2xl"></i>
            </div>

            <div>
                <p class="text-sm font-medium text-gray-500">Marked Present</p>
                <p class="text-3xl font-bold text-gray-900">350</p>
            </div>
        </div>

        <div class="mt-4 flex items-center gap-1 text-sm text-gray-500">
            <span class="font-medium text-green-600">95%</span> of students
        </div>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-all duration-200">
        <div class="flex items-center gap-5">
            <div class="flex h-14 w-14 items-center justify-center rounded-full bg-red-50 text-red-600 ring-4 ring-red-50/50">
                <i class="bi bi-person-x-fill text-2xl"></i>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500">Total Absents</p>
                <p class="text-3xl font-bold text-gray-900">15</p>
            </div>
        </div>

        <div class="mt-4 flex items-center gap-1 text-sm text-gray-500">
            Unaccounted for today
        </div>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-all duration-200">
        <div class="flex items-center gap-5">
            <div class="flex h-14 w-14 items-center justify-center rounded-full bg-amber-50 text-amber-600 ring-4 ring-amber-50/50">
                <i class="bi bi-clock-fill text-2xl"></i>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500">Late Arrivals</p>
                <p class="text-3xl font-bold text-gray-900">20</p>
            </div>
        </div>

        <div class="mt-4 flex items-center gap-1 text-sm text-gray-500">
            Arrived past cutoff
        </div>
    </div>

</div>