@page
@model AttendanceSystem.Pages.Admin_view.Dashboard.DashboardModel
@{
    ViewData["title"] = "Admin Dashboard";

}



<h1>@ViewData["Title"]</h1>

<div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100 transition-all duration-200 hover:shadow-xl">
    <div class="flex items-start justify-between">
        <div class="p-3 rounded-full bg-blue-500/10 text-blue-500">
            <i data-lucide="check-circle" class="w-7 h-7"></i>
        </div>
    </div>
    <div class="mt-4">
        <p class="text-4xl font-extrabold text-gray-900 leading-none">350</p>
        <p class="text-base font-medium text-gray-500 mt-1">Marked Attendances</p>
    </div>
    <p class="text-xs text-gray-400 mt-3">Total students marked present today.</p>
</div>

<!-- Card 2: Absents -->
<div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100 transition-all duration-200 hover:shadow-xl">
    <div class="flex items-start justify-between">
        <div class="p-3 rounded-full bg-red-500/10 text-red-500">
            <i data-lucide="user-x" class="w-7 h-7"></i>
        </div>
    </div>
    <div class="mt-4">
        <p class="text-4xl font-extrabold text-gray-900 leading-none">15</p>
        <p class="text-base font-medium text-gray-500 mt-1">Absents</p>
    </div>
    <p class="text-xs text-gray-400 mt-3">Unaccounted absences as of now.</p>
</div>

<!-- Card 3: Late Attendances -->
<div class="bg-white p-6 rounded-xl shadow-lg border border-gray-100 transition-all duration-200 hover:shadow-xl">
    <div class="flex items-start justify-between">
        <div class="p-3 rounded-full bg-amber-500/10 text-amber-500">
            <i data-lucide="clock" class="w-7 h-7"></i>
        </div>
    </div>
    <div class="mt-4">
        <p class="text-4xl font-extrabold text-gray-900 leading-none">20</p>
        <p class="text-base font-medium text-gray-500 mt-1">Late Attendances</p>
    </div>
    <p class="text-xs text-gray-400 mt-3">Students marked after the cut-off time.</p>
</div>


