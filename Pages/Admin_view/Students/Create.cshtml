@page
@model AttendanceSystem.Pages.Students.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add New Student</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Student.StudentId" class="form-label"></label>
                            <input asp-for="Student.StudentId" class="form-control" placeholder="Enter Student Id" />
                            <span asp-validation-for="Student.StudentId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Student.FirstName" class="form-label"></label>
                            <input asp-for="Student.FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="Student.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Student.LastName" class="form-label"></label>
                            <input asp-for="Student.LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="Student.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Student.Institute" class="form-label"></label>
                            <input asp-for="Student.Institute" class="form-control" placeholder="Enter institute" />
                            <span asp-validation-for="Student.Institute" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Add Student</button>

                        @if(TempData["ErrorMessage"] !=null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-page="./Index" class="btn btn-link">← Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
