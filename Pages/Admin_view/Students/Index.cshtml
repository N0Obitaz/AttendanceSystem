@page
@model AttendanceSystem.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Index";
   
}


<div class="student-cont">
    <div class="card-body p-0">
        <h1 class="text-success">Students</h1>
    </div>
    <div class="flex flex-wrap justify-between items-center gap-4 mb-6">

        <a asp-page="./Create" class="group inline-flex items-center justify-center gap-2 px-5 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium rounded-lg transition-all duration-200 shadow-md hover:shadow-lg">
            <i class="bi bi-person-plus group-hover:scale-110 transition-transform"></i>
            Enroll New Student
        </a>

        <div class="flex items-center gap-4">
            <div class="flex flex-col items-end px-4 py-2 bg-green-50 rounded-lg border border-green-100">
                <span class="text-xs font-bold text-green-700 uppercase tracking-wide">Date Today</span>
                <span class="text-lg font-bold text-green-800">@Model.Today</span>
            </div>

            <div class="flex flex-col items-end px-4 py-2 bg-green-50 rounded-lg border border-green-100">
                <span class="text-xs font-bold text-green-700 uppercase tracking-wide">Attendances</span>
                <span class="text-lg font-bold text-green-800">@Model.TotalPresent</span>
            </div>

            <div class="flex flex-col items-end px-4 py-2 bg-red-50 rounded-lg border border-red-100">
                <span class="text-xs font-bold text-red-700 uppercase tracking-wide">Absents</span>
                <span class="text-lg font-bold text-red-800">@Model.TotalAbsent</span>
            </div>
        </div>

    </div>

    <table class="table table-striped table-hover align-middle shadow-sm">
        <thead class="table-secondary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Student[0].LastName)</th>
                <th>@Html.DisplayNameFor(model => model.Student[0].FirstName)</th>
                <th>Attendance Count</th>
                <th>Remarks</th>
                <th class="text-center">Actions</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Student)
            {
                
                <tr >
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.StudentId">
                  @Html.DisplayFor(modelItem => item.LastName)
                    </a>
                    </td>
                   
                   
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>
                        <a asp-page="../AttendanceMatrix/Matrices" asp-route-id = "@item.StudentId">
                            <span class="text-dark">
                                @item.Attendances.Count(a => a.Status == "Present" || a.Status == "Late") /
                                @item.Attendances.Count()
                            </span>
                        </a>
                       
                    </td>
                    <td>


                        @if (item.Attendances.Any(a => a.Date.Date == DateTime.Today))
                        {
                            @if (item.Attendances.Any(a => a.Date.Date == DateTime.Today && a.Status == "Present"))
                            {
                                <span class="badge bg-success">Attendance Marked Present</span>
                            }
                            else if (item.Attendances.Any(a => a.Date.Date == DateTime.Today && a.Status == "Absent"))
                            {
                                <span class="badge bg-danger">Attendance Marked Absent</span>
                            }
                            else if (item.Attendances.Any(a => a.Date.Date == DateTime.Today && a.Status.ToLower() == "late"))
                            {
                                <span class="badge bg-warning">Attendance Marked Late</span>
                            }
                        }
                        else
                        {
                            <a asp-page="/Attendances/Mark" asp-route-id="@item.StudentId" class="btn btn-sm btn-primary">
                                Mark Attendance
                            </a>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-page="./Edit" asp-route-id="@item.StudentId" class="btn btn-sm btn-success me-1">
                            <i class="bi bi-pencil"></i>
                        </a>
                     
                        <a asp-page="./Delete" asp-route-id="@item.StudentId" class="btn btn-sm btn-danger me-1">
                            <i class="bi bi-trash"></i>
                        </a>

                     
                    </td>
                    
                </tr>
            }
        </tbody>
    </table>

    <div class="pagination">
        <button onclick="prevPage()">Prev</button>
        <span id="page-info"></span>
        <button onclick="nextPage()">Prev</button>
    </div>
</div>




@section Scripts {
  
}
