<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AttendanceSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true"/>
    @* <link rel="stylesheet" href="~/AttendanceSystem.styles.css" asp-append-version="true" /> *@
</head>
    @if(ViewData["HideHeader"] == null || !(bool)ViewData["HideHeader"])
    {
        <header>

        <nav class="sidebar top-0 m-3 position-fixed " style="height: 95vh;">
            <div class="p-3 flex flex-col h-full ">

                
                <div class="flex justify-center items-center mb-6">
        
                    <img src="/images/cdm.png" alt="CDM Logo" class="w-24 h-auto rounded-full ring-2 ring-teal-500/50">
                </div>

              
                <h4 class="text-center text-xl  font-semibold mb-6 tracking-wide text-3xl">DASHBOARD</h4>


                <ul class="flex flex-col space-y-2 flex-grow ">

 
                    @{
                        Func<string, string> activeClass = (page) =>
                        ViewContext.RouteData.Values["page"]?.ToString()?.Equals(page, StringComparison.OrdinalIgnoreCase) == true
                        ? "bg-teal-700 text-white font-bold "
                        : "hover:bg-gray-700 text-slate-50";
                    }

                    <li class="rounded-lg">
                        <a class=" text-black hover\:text-red-300 block py-2 px-4 rounded-lg transition duration-150 @activeClass("/Admin_view/Dashboard/Index")"
                           asp-page="/Admin_view/Dashboard/Index">
                            Dashboard
                        </a>
                    </li>

                    <li class="rounded-lg">
                        <a class="text-black hover:text-white block py-2 px-4 hover:text-white rounded-lg transition duration-150 @activeClass("/Admin_view/AttendanceMatrix/Matrices")"
                           asp-page="/Admin_view/AttendanceMatrix/Matrices" asp-route-id="2300185">
                            View Attendances
                        </a>
                    </li>

                    <li class="rounded-lg">
                        <a class="text-black hover:text-white block py-2 px-4 hover:text-white rounded-lg transition duration-150 @activeClass("/Admin_view/Students/Index")"
                           asp-page="/Admin_view/Students/Index">
                            View Students
                        </a>
                    </li>

                    <li class="rounded-lg">
                        <a class="text-black block py-2 px-4 rounded-lg transition  duration-150 @activeClass("/Admin_view/Setting/Index")"
                           asp-page="/Admin_view/Setting/Index">
                            Settings
                        </a>
                    </li>
                </ul>

                <!-- Logout Link (Pushed to the bottom) -->
                <div class="mt-auto pt-4 border-t border-gray-700">
                    <a class="block py-2 px-4 rounded-lg text-red-400 hover:bg-gray-700 hover:text-red-300 transition duration-150 font-semibold"
                       asp-page="/Logout/Index">
                        Logout
                    </a>
                </div>
            </div>
        </nav>

           
            @* <nav class="sidebar top-0 m-3  text-white  position-fixed " style="height: 95vh;">
                <div class="p-3">
                    <div class="d-flex justify-content-center align-items-center" >
                        <img src="/images/cdm.png" alt="Centered Image" style="width: 100px; height: auto;">
                    </div>
                   
                    <h4 class="text-center mb-4">Dashboard</h4>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a class="nav-link active text-white" asp-page="/Admin_view/Dashboard/Index">Home</a>
                        </li>

                        <li class="nav-item mb-2">
                            <a class="nav-link text-white" asp-page="/Admin_view/AttendanceMatrix/Matrices" asp-route-id="2300185">View Attendances</a>
                        </li>

                        <li class="nav-item mb-2">
                            <a class="nav-link text-white" asp-page="/Admin_view/Students/Index">View Students</a>
                        </li>

                        <li class="nav-item mb-2">
                            <a class="nav-link text-white" asp-page="/Admin_view/Setting/Index">Settings</a>
                        </li>

                        <li class="nav-item mt-4">
                            <a class="nav-link text-danger" asp-page="/Logout/Index">Logout</a>
                        </li>
                    </ul>

                </div>
            </nav> *@
        </header> 
        

    }


<body class="h-full p-8">

    <div class="w-full mt-6 bg-gray-100 rounded-xl sm:p-8">
        

            
        
            
        <main role="main" class="w-full mx-auto p-2 py-5 sm:py-10 max-w-5xl">

            <div class="container mx-auto p-2 w-full font-sans">
            @RenderBody()

            </div>
        </main>

        

    </div>

</body>
  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/clock.js" asp-append-version="true"></script>
    <script src="~/js/Pagination.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</html>