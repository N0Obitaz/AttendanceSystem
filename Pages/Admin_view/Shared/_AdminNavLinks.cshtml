@{
    // This helper function stays inside the partial so it works automatically
    string ActiveClass(string page)
    {
        var active = ViewContext.RouteData.Values["page"]?.ToString()?.Equals(page, StringComparison.OrdinalIgnoreCase) ?? false;
        return active
            ? "bg-teal-700 text-white group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6"
            : "text-slate-600 hover:bg-teal-50 hover:text-teal-700 group flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6 transition duration-150";
    }
}

