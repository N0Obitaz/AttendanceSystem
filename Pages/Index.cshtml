@page
@model AttendanceSystem.Pages.IndexModel
@{
    ViewData["Title"] = "Login";
   
}


<header> 
    <style>
        .login {
            display: flex;
            justify-content: center;
            margin: 0 auto;
            flex-direction: row-reverse;
        
         
           
            width: 90%;
            
        }

        .left {
            flex: 1;
            background-color: #E2E5EA;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 30px;
        }

            .left h1 {
                text-align: center;
            }

            .left h3 {
                font-size: 15px;
                text-align: center;
                margin-bottom: 50px;
            }

            .left input {
                padding: 12px;
                border: 1px solid #ccc;
                border-radius: 6px;
                font-size: 1rem;
                transition: 0.3s;
                border-radius: 10px;
                margin: 4px;
                width: 25vw;
            }

            .left .for {
                text-decoration: none;
                color: black;
                display: block;
                margin: 10px;
            }

            .left button {
                color: white;
                background-color: #001840;
                padding: 10px;
                width: 30%;
                border-radius: 30px;
                margin: 10px 0px 70px 0;
            }

            .left p {
                margin-top: 70px;
                margin: 10px;
            }

            .left input:focus {
                border-color: #007bff;
                outline: none;
            }

        .right {
            flex: 1;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .right img {
                background-color: aliceblue;
                background-position: cover;
                background-repeat: no-repeat;
                width: 30vw;
                height: 70vh;
            }

        .validation-summary-errors ul {
            list-style-type: none;
            padding-left: 0;
            margin-bottom: 0;
        }

        .validation-summary-errors li {
            list-style-type: none;
        }
    </style>
</header>

<div class="login">
    <div class="left p-5">
        <!-- Important: method="post" is correct for form submission -->
        <form method="post">
            <h1>LOGIN</h1>
            <h3>Login to your account</h3>

            <!-- Use Tag Helpers for model binding and validation -->
            <input asp-for="CurrentUser" class="text" placeholder="Username or Student No." />
            <span asp-validation-for="CurrentUser" class="text-danger"></span>

            <input asp-for="Password" type="password" class="pass" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <a href="#" class="for">Forgot Password</a>

            <button type="submit">Login</button>

            <!-- Validation summary for general errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger list-unstyled"></div>

            <p>Doesn't have an account? <a href="#">Sign Up</a></p>
        </form>
    </div>

    <div class="right rounded-1   ">
        <img src="~/images/login.png" alt="Login illustration" />
    </div>
</div>

@section Scripts {
    <!-- Include client-side validation scripts if using validation -->
    <partial name="_ValidationScriptsPartial" />
}
