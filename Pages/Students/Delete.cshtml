@page
@model AttendanceSystem.Pages.Students.DeleteModel

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirm Unenrollment</h4>
                </div>
                <div class="card-body">
                    <p class="text-danger fw-bold">Are you sure you want to unenroll this student?</p>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Student.FirstName)</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Student.LastName)</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Student.StudentId" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
