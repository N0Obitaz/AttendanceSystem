@page
@model AttendanceSystem.Pages.student_view.SettingModel
@{
}

<div class="min-h-screen border-t-4 bg-white border-green-600 shadow-lg p-6 flex justify-center">

    <div class="w-full max-w-6xl bg-white p-8 rounded-md">


        <h1 class="text-2xl font-bold text-center mb-6 tracking-wide">
            ACCOUNT SETTING
        </h1>

        <div class="flex flex-col md:flex-row gap-6">

            <div class="w-full md:w-1/4 bg-gray-200 p-5 rounded-md h-fit">
                <ul class="space-y-4 text-gray-700 font-medium">

                    <li class="flex items-center gap-2 cursor-pointer hover:text-blue-700"
                        onclick="showTab('profile')">
                        <i class="fa fa-user"></i> Profile Settings
                    </li>

                    <li class="flex items-center gap-2 cursor-pointer hover:text-blue-700"
                        onclick="showTab('password')">
                        <i class="fa fa-lock"></i> Password
                    </li>

                    <li class="flex items-center gap-2 cursor-pointer hover:text-blue-700"
                        onclick="showTab('about')">
                        <i class="fa fa-info-circle"></i> About Us
                    </li>
                </ul>

            </div>


            <div class="w-full md:w-3/4 bg-gray-200 p-8 rounded-md">

                <div id="tab-profile" class="tab-content">

                    <div class="flex items-center gap-5 mb-8">
                        <img src="/images/avatar.png" class="w-20 h-20 rounded-full bg-gray-300">

                        <div class="flex gap-3">
                            <button class="px-4 py-2 bg-blue-600 text-white rounded-md shadow hover:bg-blue-700">
                                Upload New
                            </button>
                            <button class="px-4 py-2 bg-gray-800 text-white rounded-md shadow hover:bg-gray-900">
                                Delete avatar
                            </button>
                        </div>


                    </div>

                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-semibold mb-1">First Name</label>
                            <input class="w-full border border-gray-400 p-2 rounded-md" type="text">
                        </div>

                        <div>
                            <label class="block text-sm font-semibold mb-1">Last Name</label>
                            <input class="w-full border border-gray-400 p-2 rounded-md" type="text">
                        </div>
                       

                        <div>
                            <label class="block text-sm font-semibold mb-1">Student ID</label>
                            <input class="w-full border border-gray-400 p-2 rounded-md" type="text">
                        </div>

                        <div>
                            <label class="block text-sm font-semibold mb-1">Mobile No.</label>
                            <input class="w-full border border-gray-400 p-2 rounded-md" type="text">
                        </div>

                        <div>
                            <label class="block text-sm font-semibold mb-1">Email</label>
                            <input class="w-full border border-gray-400 p-2 rounded-md" type="email">
                        </div>
                        <button class="px-6 py-2 bg-blue-900 text-white rounded-md hover:bg-blue-700 shadow">
                            Save Changes
                        </button>
                    </div>

                    <div class="mt-6 flex justify-end">
                        <button class="px-6 py-2 bg-blue-900 text-white rounded-md hover:bg-blue-700 shadow">
                            Save Changes
                        </button>
                    </div>
                </div>

       
                <div id="tab-password" class="tab-content hidden">

                    <h2 class="text-xl font-semibold mb-4">Change Password</h2>

                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-semibold mb-1">Current Password</label>
                            <input class="w-full border border-gray-400 p-2 rounded-md" type="password">
                        </div>

                        <div>
                            <label class="block text-sm font-semibold mb-1">New Password</label>
                            <input class="w-full border border-gray-400 p-2 rounded-md" type="password">
                        </div>

                        <div>
                            <label class="block text-sm font-semibold mb-1">Confirm Password</label>
                            <input class="w-full border border-gray-400 p-2 rounded-md" type="password">
                        </div>
                    </div>

                    <div class="mt-6 flex justify-end">
                        <button class="px-6 py-2 bg-blue-900 text-white rounded-md hover:bg-blue-700 shadow">
                            Update Password
                        </button>
                    </div>
                </div>

                <div id="tab-about" class="tab-content hidden">
                    <h2 class="text-xl font-semibold mb-4">About System</h2>

                    <p class="text-gray-700 leading-relaxed">
                        This student attendance system allows students to view attendance, manage profiles,
                        and update account information.
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    function showTab(tab) {
        document.querySelectorAll(".tab-content").forEach(div => div.classList.add("hidden"));
        document.getElementById("tab-" + tab).classList.remove("hidden");
    }
</script>
