<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AttendanceSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/output.css" />
    @* <link rel="stylesheet" href="~/AttendanceSystem.styles.css" asp-append-version="true" /> *@
</head>
 @if (ViewData["HideHeader"] == null || !(bool)ViewData["HideHeader"])
{
    <header>
        <!-- Tailwind Sidebar: Fixed position, full height, dark background, fixed width -->
        <nav class="sidebar top-0 m-3 text-black  position-fixed " style="height: 95vh; text-black">
            <div class="p-3 flex flex-col h-full ">

                <!-- Logo Section -->
                <div class="flex justify-center items-center mb-6">
                    <!-- Ensure your image path is correct, Tailwind classes for sizing -->
                    <img src="/images/cdm.png" alt="CDM Logo" class="w-24 h-auto rounded-full ring-2 ring-teal-500/50">
                </div>

                <!-- Title -->
                <h4 class="text-center text-xl  font-semibold mb-6 tracking-wide text-3xl">DASHBOARD</h4>

                <!-- Navigation Links -->
                <ul class="flex flex-col space-y-2 flex-grow ">

                    <!-- Link Style: Active/Hover States -->
                    @{
                        Func<string, string> activeClass = (page) =>
                        ViewContext.RouteData.Values["page"]?.ToString()?.Equals(page, StringComparison.OrdinalIgnoreCase) == true
                        ? "bg-teal-700 text-black font-bold"
                        : "text-gray-300 hover:bg-gray-700";
                    }

                    <li class="rounded-lg">
                        <a class=" text-black block py-2 px-4  hover:text-white rounded-lg transition duration-150 @activeClass("/student_view/Home/Index")"
                           asp-page="/student_view/Home/Index">
                            Home
                        </a>
                    </li>

                    <li class="rounded-lg">
                        <a class="text-black hover:text-white block py-2 px-4 hover:text-white rounded-lg transition duration-150 @activeClass("/student_view/ScanQR/ScanQR")"
                           asp-page="/student_view/ScanQR/ScanQR">
                            Mark Attendance
                        </a>
                    </li>

                    <li class="rounded-lg">
                        <a class="text-black hover:text-white block py-2 px-4 hover:text-white rounded-lg transition duration-150 @activeClass("/student_view/ViewAttendance/ViewAttendance")"
                           asp-page="/student_view/ViewAttendance/ViewAttendance">
                            My Attendances
                        </a>
                    </li>

                    <li class="rounded-lg">
                        <a class="text-black block py-2 px-4 rounded-lg transition  duration-150 @activeClass("/student_view/Setting/Setting")"
                           asp-page="/student_view/Setting/Setting">
                            Settings
                        </a>
                    </li>
                </ul>

                <!-- Logout Link (Pushed to the bottom) -->
                <div class="mt-auto pt-4 border-t border-gray-700">
                    <a class="block py-2 px-4 rounded-lg text-red-400 hover:bg-gray-700 hover:text-red-300 transition duration-150 font-semibold"
                       asp-page="/Logout/Index">
                        Logout
                    </a>
                </div>
            </div>
        </nav>
    </header>
}


<body class="h-full p-8">

    <div class="w-full mt-6 bg-gray-100 rounded-xl sm:p-8">
      

            <main role="main" class="w-full mx-auto p-2 py-5 sm:py-10 max-w-5xl">
            <div class="container mx-auto p-2 w-full font-sans">
                @RenderBody()
                </div>
            </main>


    </div>

</body>

