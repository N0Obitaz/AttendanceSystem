@page "/student_view/home"
@model AttendanceSystem.Pages.student_view.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "./Shared/_StudentLayout";
}

<div class="min-h-screen bg-gray-50 p-6">

    <header class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
        <div>
            <h1 class="text-2xl md:text-3xl font-bold text-slate-800 tracking-tight">
                Students' Center Attendance Portal
            </h1>
            <p class="text-slate-500 mt-1">
                Date Today: <span id="clock" class="font-semibold text-green-600"></span>
            </p>
        </div>

        <div class="flex items-center space-x-4 mt-4 md:mt-0">
            <button class="p-2 relative text-slate-400 hover:text-teal-700 transition duration-200">
                <i class="bi bi-bell fs-4"></i>
                <span class="absolute top-1 right-1 h-3 w-3 bg-red-500 rounded-full border-2 border-white"></span>
            </button>
            <button class="flex items-center space-x-2 text-slate-600 hover:text-teal-800">
                <div class="h-10 w-10 bg-indigo-100 rounded-full flex items-center justify-center text-teal-600">
                    <i class="bi bi-person-circle fs-4"></i>
                </div>
                <span class="font-medium hidden sm:block">@Model.Student.FirstName</span>
               
            </button>
        </div>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <div class="lg:col-span-2 space-y-6">

            <div class="bg-custom-teal-gradient rounded-2xl shadow-lg p-6 text-white relative overflow-hidden">
                <div class="absolute top-0 right-0 -mt-4 -mr-4 w-32 h-32 bg-white opacity-10 rounded-full blur-xl"></div>

                <div class="relative z-10">
                    <div class="flex items-start justify-between">
                        <div>
                            <h2 class="text-xl font-bold mb-2">Have you clocked in today?</h2>
                            <p class="text-indigo-100 mb-6 max-w-md">
                                Don't forget to mark your attendance before 1:00 PM to avoid being marked late.
                            </p>

                            <a asp-page="/student_view/ScanQR/ScanQr" class="bg-white text-green-600 font-semibold md:w-72 py-2.5 px-6 rounded-lg shadow-sm hover:bg-green-700 transition duration-200 flex items-center gap-2"><i class="bi bi-calendar-check"></i>Mark Attendance Now</a>
                        </div>
                        <i class="bi bi-clock-history text-6xl opacity-20"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 md:h-64 flex flex-col">

                <h3 class="font-bold text-slate-700 mb-4 shrink-0">Recent Activity</h3>

                <div class="flex flex-col overflow-y-auto no-scrollbar h-full">
                    @if (Model.Student.TransactionLogs != null && Model.Student.TransactionLogs.Any())
                    {
                        @foreach (var transaction in Model.Student.TransactionLogs)
                        {
                            <div class="p-4 border-b border-gray-100 last:border-0 hover:bg-gray-50 transition-colors duration-150">
                                <div class="flex items-center justify-between">
                                    <div class="flex items-center gap-3">
                                        <div class="h-8 w-8 rounded-full bg-indigo-50 text-indigo-600 flex items-center justify-center shrink-0">
                                            <i class="bi bi-activity text-sm"></i>
                                        </div>

                                        <div class="flex items-center justify-between w-full">

                                            <div class="flex flex-col">
                                                <p class="text-sm font-semibold text-gray-800">@transaction.Action</p>
                                                <p class="text-xs text-gray-400">Transaction ID: #@transaction.TransactionId</p>
                                            </div>

                                            <div class="text-right shrink-0 ml-4">
                                                <p class="text-xs text-gray-400">@transaction.Timestamp</p>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="p-6 text-center text-gray-400 text-sm">
                            No recent activity found.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="space-y-6">

            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="font-bold text-slate-700">Overview</h3>
                    <i class="bi bi-bar-chart-line text-slate-400"></i>
                </div>

                <div class="mb-4 p-4 rounded-xl bg-green-50 border border-green-100 hover:shadow-sm transition-all duration-200">
                    <div class="flex items-center justify-between mb-1">
                        <p class="text-sm text-green-600 font-medium">Attendance Streak</p>
                        <i class="bi bi-fire text-xl @(Model.AttendanceStreak > 0 ? "text-orange-500" : "text-gray-300")"></i>
                    </div>

                    <p class="text-3xl font-bold text-slate-800">
                        @Model.AttendanceStreak
                        <span class="text-sm font-normal text-slate-400">
                            @(Model.AttendanceStreak == 1 ? "day" : "days")
                        </span>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div class="p-4 rounded-xl bg-yellow-50 border border-yellow-100">
                        <p class="text-sm text-yellow-600 font-medium">Late</p>
                        <p class="text-2xl font-bold text-slate-800">@Model.LateMarks</p>
                    </div>
                    <div class="p-4 rounded-xl bg-red-50 border border-red-100">
                        <p class="text-sm text-red-600 font-medium">Absent</p>
                        <p class="text-2xl font-bold text-slate-800">@Model.AbsentMarks</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 flex flex-col items-center justify-center text-center">
                <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mb-3">
                    <i class="bi bi-person text-4xl text-slate-400"></i>
                </div>
                <h4 class="font-bold text-slate-800">Class Status</h4>
                <span class="px-3 py-1 bg-green-100 text-green-700 text-xs font-bold uppercase rounded-full mt-2">Active</span>
            </div>

        </div>
    </div>
</div>


<style>
    /* Hide scrollbar for Chrome, Safari and Opera */
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
    /* Hide scrollbar for IE, Edge and Firefox */
    .no-scrollbar {
        -ms-overflow-style: none; /* IE and Edge */
        scrollbar-width: none; /* Firefox */
    }
</style>

@section Scripts {
    <script src="~/js//clock.js">
        
    </script>
}