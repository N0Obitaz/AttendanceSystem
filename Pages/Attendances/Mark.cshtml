@page "{id:int}"
@model AttendanceSystem.Pages.Attendances.MarkModel

<h1>Mark Attendance</h1>

<p>Student: <strong>@Model.Student.FirstName @Model.Student.LastName</strong></p>

<form method="post">

    <input type="hidden" asp-for="Student.StudentId" />

    <button type="submit" name="status" value="Present" class="btn btn-success">
        Mark Present
    </button>
    <button type="submit" name="status" value="Absent" class="btn btn-danger">
        Mark Absent
    </button>


</form>

<div> 
    <a asp-page="/Students/Index">Back to List</a>
</div>