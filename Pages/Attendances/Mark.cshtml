@page "{id:int}"
@model AttendanceSystem.Pages.Attendances.MarkModel
@{
    ViewData["Title"] = "Mark Attendance";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Mark Attendance</h2>
        </div>
        <div class="card-body">
            <p class="lead">
                Student: <strong>@Model.Student.FirstName @Model.Student.LastName</strong>
            </p>

            <form method="post" class="mt-3">
                <input type="hidden" asp-for="Student.StudentId" />

                <div class="d-flex gap-3">
                    <button type="submit" name="status" value="Present" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle"></i> Mark Present
                    </button>
                    <button type="submit" name="status" value="Absent" class="btn btn-danger btn-lg">
                        <i class="bi bi-x-circle"></i> Mark Absent
                    </button>

                    <button type="submit" name="status" value="Late" class="btn btn-warning btn-lg">
                        <i class="bi bi-x-circle"></i> Mark Late
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-end">
            <a asp-page="/Students/Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
